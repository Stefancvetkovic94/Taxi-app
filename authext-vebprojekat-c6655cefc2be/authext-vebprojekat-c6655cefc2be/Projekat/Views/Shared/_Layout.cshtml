<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    
    @Styles.Render("~/Content/Stylesheets/Global.css")
    
    @RenderSection("styles", required: false)
</head>
<body>
    <div id="header">
        <div id="title" >
            <a href="/">Taksi</a>
        </div>
        <div id="links">
            <a class="padded-left" href="/Search">Search</a>
            @if (Request.Cookies[CookieKeys.Login]?.Value == null || ViewBag.Title == "You logged out")
            {
                <a class="padded-left" href="/Login">Log in</a>
                <a class="padded-left" href="/Register">Register</a>
            }
            else
            {
                <a class="padded-left" href="/User/@Request.Cookies[CookieKeys.Login].Value">@Request.Cookies[CookieKeys.Login].Value</a>
                <a class="padded-left" href="/Logout">Log out</a>
            }
        </div>
    </div>

    <div id="content">
        @RenderBody()
    </div>
</body>
</html>
